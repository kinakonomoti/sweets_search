<body class="d-flex flex-column vh-100">
  <main class="mb-auto">
    <div class="container">
      <div class="row no-gutters">
        <div class="col-md-6 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
          <h5 class="text-dark bg-light py-4 mb-0">マイページ</h5>
          <div class="form-body p-5">
            <h4><%= @user.name %></h4>
            <%= image_tag @user.get_profile_image(100,100) %>
            <% if @user.id == current_user.id %>
            <% end %>
          </div>
          <div class="btn btn-success col-6 mb-3">
            <%= link_to "マイページ編集", edit_user_path(@user), class: "text-light" %>
          </div>
          <div class="btn btn-success col-6 mb-3">
            <%= link_to "退会", user_path(current_user.id), class: "destroy-user text-light", method: :delete, "data-confirm" => "本当に退会しますか？" %>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>

